<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activitys.MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ll_1"
            >

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/btn_Pic3_n_pic4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                app:cornerRadius="15dp"
                android:layout_marginStart="5dp"
                android:layout_weight=".5"
                android:layout_marginEnd="5dp"
                android:background="@drawable/ic_pic3_n_pic4"
                />

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/btn_lotto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold"
                app:cornerRadius="15dp"
                android:layout_weight=".5"
                android:layout_marginStart="5dp"
                android:background="@drawable/ic_lotto_black"/>
        </LinearLayout>
        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btn_powerball_or_megamillion"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginEnd="5dp"
            app:cornerRadius="15dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/ll_1"
            android:background="@drawable/ic_powerball"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_rate"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_size"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_share"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_size"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>